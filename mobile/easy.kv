# easy.kv file

# Custom Button
<MButton@Button>:
    #background_color : 0,0,0,0
    font_name: "Arial"
    background_normal: 'button.png'
    background_down: 'button.png'

# Custom Button
<MkButton@Button>:
    background_color : 0,0,0,0
    font_name: "Arial"

# Custom Label
<MLabel@Label>:
    font_name: "Arial"

# Custom textinput
<MText@TextInput>:
    background_color: 0,0,0,0
    foreground_color: 255, 255, 255, 1
    halign: "center"
    valign: "center"
    font_name: "Arial"

# Custom textinput
<TText@TextInput>:
    background_color: 0,0,0,0
    foreground_color: 255, 255, 255, 1
    halign: "center"
    valign: "center"
    font_name: "Arial"  

# Screen_0 : Loading
<ScreenZero>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.png'        
    
    Image:
        source: 'icon.png'
        size_hint: 1,0.4
        pos:5,320

    BoxLayout:
        orientation: "vertical"
        
        MLabel:
            text: ""
            size_hint: 1,0.2 

        BoxLayout:
            orientation: "vertical"
            spacing: 20
            padding: 20
            size_hint: 1,0.5
            
            MLabel:
                text: ""
        
            MLabel:
                id : shint
                text: root.shint
            
            BoxLayout:
                orientation: "horizontal"
                spacing: 20
                padding: 20
                size_hint: 1,.5
                
                MButton:
                    text: "Login"
                    on_release: root.manager.current = "screen1"
                
                MButton:
                    text: "Signup"
                    on_release: root.manager.current = "screen2"

# screen_OTP : OTP
<OTP>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.png'
    
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 20
        
        MLabel:
            text: 'OTP : Enter OTP sent to mail'
        
        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            padding: 20
        
            MLabel:
                text: 'OTP : '
                size_hint: 0.2,1
                
            TextInput:
                id: otp
                hint_text: 'Enter OTP'
                halign: "center"
                valign: "center"
                size_hint: 0.8,1
        
        MLabel:
            id : serror
            text: root.serror
        
        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            padding: 20

            MButton:
                text: "Confirm"
                on_release: root.confirm()
                        
            MButton:
                text: "back"
                on_release: root.manager.current = "screen0"
                size_hint: 1,.5
        
        MLabel:
            id : shint
            text: root.shint
 
